<Window x:Class="WpfApp1.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid Background="#FF0084D0">
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="69,200,0,0" VerticalAlignment="Top" Width="75" Click="btnLogin_Click_1"/>
        <Label Content="Username" HorizontalAlignment="Left" Margin="69,119,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="69,150,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtLogUsername" HorizontalAlignment="Left" Height="23" Margin="159,119,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtLogPass" HorizontalAlignment="Left" Height="23" Margin="159,150,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="New Member?" HorizontalAlignment="Left" Margin="69,221,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnReg" Content="Register" HorizontalAlignment="Left" Margin="69,247,0,0" VerticalAlignment="Top" Width="75" Click="btnReg_Click"/>

    </Grid>
</Window>
